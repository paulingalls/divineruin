{
  "name": "divineruin",
  "type": "module",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev:server": "bun run --cwd apps/server dev",
    "dev:mobile": "bun run --cwd apps/mobile start",
    "dev:mobile:ios": "bun run --cwd apps/mobile ios",
    "dev:mobile:android": "bun run --cwd apps/mobile android",
    "migrate": "bun run scripts/migrate.ts",
    "seed": "cd scripts && uv run python seed_content.py",
    "dev:agent": "cd apps/agent && uv run --env-file ../../.env.local python agent.py dev",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
